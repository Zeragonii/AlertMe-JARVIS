{
  "manifest_version": 3,
  "name": "Î² AlertMe JARVIS",
  "version": "2.0.0",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "notifications",
    "scripting",
    "power"
  ],
  "host_permissions": [
    "*://*.mendixcloud.com/*"
  ],
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "alert.html",
        "sounds/new-trouble-ticket.wav",
        "sounds/new-smart-hands.wav",
        "sounds/new-cross-connect.wav"
      ],
      "matches": [
        "*://*.mendixcloud.com/*"
      ]
    }
  ],
  "action": {
    "default_title": "AlertMe JARVIS",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
